<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    android:background="@drawable/element_view_style">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgContactAvatar"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/default_avatar" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgContactDelete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgContactAvatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgContactAvatar"
        app:srcCompat="@drawable/ic_delete" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:lines="1"
        tools:text="Contact Name"
        android:textColor="@color/purple_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgContactAvatar"
        app:layout_constraintTop_toTopOf="@+id/imgContactAvatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvContactCareer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Career"
        android:textColor="@color/gray_color"
        android:lines="1"
        app:layout_constraintStart_toStartOf="@+id/tvContactName"
        app:layout_constraintTop_toBottomOf="@+id/tvContactName" />
</androidx.constraintlayout.widget.ConstraintLayout>